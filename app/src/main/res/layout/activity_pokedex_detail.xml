<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="pokemon"
            type="com.example.pokedex.network.models.PokemonByIdResponse" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_view_pokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/pokemon_image" />

        <TextView
            android:id="@+id/text_view_pokemon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{pokemon.name}"/>

        <TextView
            android:id="@+id/text_view_pokemon_weight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.format(@string/pokemon_weight, pokemon.weight)}"/>

        <TextView
            android:id="@+id/text_view_pokemon_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{String.format(@string/pokemon_height, pokemon.height)}"/>

        <TextView
            android:id="@+id/text_view_pokemon_ability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{pokemon.abilities.get(0).ability.name}"/>

        <TextView
            android:id="@+id/text_view_pokemon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{pokemon.types.get(0).type.name}"/>
    </LinearLayout>
</layout>